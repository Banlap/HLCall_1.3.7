<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_module"
    android:orientation="vertical">

    <ListView
        android:visibility="gone"
        android:id="@+id/lv_NormalSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_setting_blacklist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="黑名单" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_fanhx" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="视频" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_fanhx" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="音频" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_fanhx" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_sound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="铃声设置" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/icon_fanhx" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_float"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="悬浮" />

        <ImageView
            android:id="@+id/iv_setting_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/selector_peizhi_on_off" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_auto_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="自动接听" />

        <ImageView
            android:id="@+id/iv_setting_auto_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/selector_peizhi_on_off" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_auto_video_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="自动视频接听" />

        <ImageView
            android:id="@+id/iv_setting_auto_video_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/selector_peizhi_on_off" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_setting_auto_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_module"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="开启自启动" />

        <ImageView
            android:id="@+id/iv_setting_auto_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/selector_peizhi_on_off" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />


</LinearLayout>