<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_module"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides"
        android:paddingRight="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="账户名称" />

        <TextView
            android:id="@+id/tv_app_user"
            style="@style/TextGray.Small"
            android:text="已经分配好" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="巡检服务器IP" />

        <hzhl.net.hlcall.view.LastInputEditText
            android:id="@+id/edit_mov_domain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入"
            android:text=""
            android:inputType="text"
            android:paddingRight="@dimen/space_sides"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="SIP服务器IP+端口" />

        <hzhl.net.hlcall.view.LastInputEditText
            android:id="@+id/edit_domain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入"
            android:text=""
            android:inputType="text"
            android:paddingRight="@dimen/space_sides"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="用户名" />

        <hzhl.net.hlcall.view.LastInputEditText
            android:id="@+id/edit_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入"
            android:inputType="number"
            android:paddingRight="@dimen/space_sides"
            android:text=""
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="密码" />

        <hzhl.net.hlcall.view.LastInputEditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入"
            android:inputType="textPassword"
            android:paddingRight="@dimen/space_sides"
            android:text=""
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="授权用户" />

        <hzhl.net.hlcall.view.LastInputEditText
            android:id="@+id/edit_shou_quan_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入"
            android:paddingRight="@dimen/space_sides"
            android:text=""
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sip_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_sides">

        <TextView
            style="@style/TextBlack.Normal"
            android:text="网络传输方式" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:hint="UDP"
            android:paddingRight="@dimen/space_sides"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:background="@color/white_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/blue_font"
            android:textSize="@dimen/text_normal" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/line" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/blue_font"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

</LinearLayout>
