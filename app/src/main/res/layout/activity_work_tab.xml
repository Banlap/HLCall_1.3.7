<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hzhl.net.hlwork.ui.work.WorkTabActivity">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/text_my_location"
        android:layout_width="@dimen/work_tab_menu_size"
        android:layout_height="@dimen/work_tab_menu_size"
        android:background="@drawable/shape_white_r6"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_location"
        android:elevation="@dimen/tab_elevation"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintLeft_toLeftOf="@id/map_view"
        app:layout_constraintTop_toTopOf="@id/map_view"
        app:layout_constraintBottom_toBottomOf="@id/map_view"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_tab_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        tools:listitem="@layout/rec_work_tab_menu"
        android:overScrollMode="never"
        android:padding="@dimen/tab_margin"
        app:layout_constraintTop_toBottomOf="@id/cl_note"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tab_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_white_r6"
        android:elevation="@dimen/tab_elevation"
        >

        <ImageView
            android:id="@+id/image_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/tab_margin"
            android:layout_marginBottom="@dimen/tab_margin"
            android:layout_marginLeft="@dimen/tab_margin"
            android:background="@mipmap/icon_zutb"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_note_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="您还没有创建群组"
            android:textColor="@color/black_title_font"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_note"
            app:layout_constraintBottom_toTopOf="@id/text_note_content"
            app:layout_constraintRight_toLeftOf="@id/text_create"
            app:layout_constraintVertical_chainStyle="packed"
            />
        <TextView
            android:id="@+id/text_note_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="请立即创建或者加入一个吧"
            android:textSize="@dimen/text_smaller"
            app:layout_constraintTop_toBottomOf="@id/text_note_head"
            app:layout_constraintLeft_toLeftOf="@id/text_note_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/text_note_head"
            />

        <com.coorchice.library.SuperTextView
            android:id="@+id/text_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入组"
            android:padding="@dimen/text_padding"
            app:stv_solid="@color/blue_font"
            app:stv_corner="@dimen/stv_corner"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/tab_margin"
            />
        <com.coorchice.library.SuperTextView
            android:id="@+id/text_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建组"
            android:padding="@dimen/text_padding"
            app:stv_solid="@color/blue_font"
            app:stv_corner="@dimen/stv_corner"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_join"
            android:layout_marginEnd="5dp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
