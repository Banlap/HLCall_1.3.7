<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_sides"
        android:layout_marginRight="@dimen/space_sides"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/space_sides"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/space_sides"
        android:layout_marginBottom="@dimen/space_sides"
        android:background="@drawable/shape_white_r6"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_title_font"
        android:textSize="@dimen/text_normal" />
</LinearLayout>