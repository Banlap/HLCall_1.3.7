<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:orientation="vertical"
    tools:context=".activity.MovingPubActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            >
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="请输入文字内容"
            android:maxLength="300"
            android:minHeight="300dp"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_add_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            tools:listitem="@layout/item_image"
            tools:itemCount="4"
            />
        <View
            android:id="@+id/line_add"
            app:layout_constraintTop_toBottomOf="@id/rec_add_image"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line"
            />

        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="还可以输入300字"
            android:padding="10dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/line_add"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_input"
            >
            <TextView
                android:id="@+id/text_address_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:textSize="@dimen/text_large"
                android:textColor="@color/fd111"
                android:drawableStart="@mipmap/icon_weizhi"
                app:layout_constraintTop_toTopOf="@id/text_address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/text_address"
                />
            <TextView
                android:id="@+id/text_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="点击定位"
                android:textSize="@dimen/text_normal"
                android:drawableEnd="@mipmap/icon_fanhui"
                android:drawablePadding="10dp"
                android:gravity="end"
                android:padding="10dp"
                app:layout_constraintLeft_toRightOf="@id/text_address_head"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写详细地址（街道、楼牌号等）"
            android:padding="10dp"
            android:textSize="@dimen/text_normal"
            android:maxLength="30"
            android:background="@color/white"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_address"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人:"
            android:padding="10dp"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/edit_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberSigned"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/text_normal"
            android:hint="请输入收件人"
            android:background="@drawable/bg_line_gray"
            />
        <TextView
            android:id="@+id/text_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上报"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/blue_font"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            />
    </LinearLayout>


</LinearLayout>