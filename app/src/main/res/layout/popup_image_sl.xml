<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/chat_bottom_menu_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="@drawable/chat_bubble_incoming_full"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/pic_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_chat_menu_pic"
            android:drawablePadding="8dp"
            android:textColor="@color/color_9d"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:text="图片"/>
        <TextView
            android:id="@+id/camera_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_chat_menu_camera"
            android:drawablePadding="8dp"
            android:textColor="@color/color_9d"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:text="拍照"/>
    </LinearLayout>

</LinearLayout>