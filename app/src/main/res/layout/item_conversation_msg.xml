<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/item_msg_rl">
    <ImageView
        android:id="@+id/item_msg_avatar_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_msg_default_avatar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_msg_avatar_iv"
        android:layout_toLeftOf="@id/item_msg_date_tv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_msg_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/item_msg_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_msg_last_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:textColor="#adadad" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_msg_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:textColor="#adadad"/>
</RelativeLayout>