<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_module"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_sides">

    <LinearLayout
        android:id="@+id/ll_never"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_never"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="从不提醒"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_one"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="提醒一次"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="提醒两次"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_three"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="提醒三次"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="提醒四次"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

    <LinearLayout
        android:id="@+id/ll_five"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_row"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_fanhx"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_five"
            style="@style/TextBlack.Normal"
            android:layout_marginLeft="15dp"
            android:text="提醒五次"
            android:textColor="@color/selector_black_blue" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />
</LinearLayout>