<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeetingAddActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_intercom_contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/item_contacts_sl"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_send"
        />

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_bohao_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            style="@style/TextWhite.Large"
            android:gravity="center"
            android:text="按住讲话" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>