<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/audio_call_function_bar_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_speaker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/selector_meeting_speacker"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_keep"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扬声器"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@id/iv_speaker"
        app:layout_constraintLeft_toLeftOf="@id/iv_speaker"
        app:layout_constraintTop_toBottomOf="@id/iv_speaker"

        />


    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/selector_meeting_del"
        app:layout_constraintTop_toTopOf="@id/iv_speaker"
        app:layout_constraintBottom_toBottomOf="@id/iv_speaker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_mute"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@id/iv_del"
        app:layout_constraintLeft_toLeftOf="@id/iv_del"
        app:layout_constraintTop_toBottomOf="@id/iv_del"

        />

    <ImageView
        android:id="@+id/iv_keep"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/selector_meeting_keep"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/iv_speaker"
        app:layout_constraintBottom_toBottomOf="@id/iv_speaker"
        app:layout_constraintRight_toLeftOf="@id/iv_mute"
        app:layout_constraintLeft_toRightOf="@id/iv_speaker"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保持"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@id/iv_keep"
        app:layout_constraintLeft_toLeftOf="@id/iv_keep"
        app:layout_constraintTop_toBottomOf="@id/iv_keep"

        />

    <ImageView
        android:id="@+id/iv_mute"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/selector_meeting_mute"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@id/iv_speaker"
        app:layout_constraintBottom_toBottomOf="@id/iv_speaker"
        app:layout_constraintRight_toLeftOf="@id/iv_del"
        app:layout_constraintLeft_toRightOf="@id/iv_keep"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静音"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="@id/iv_mute"
        app:layout_constraintLeft_toLeftOf="@id/iv_mute"
        app:layout_constraintTop_toBottomOf="@id/iv_mute"

        />


</androidx.constraintlayout.widget.ConstraintLayout>