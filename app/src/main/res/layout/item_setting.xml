<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_sides"
        android:paddingEnd="@dimen/space_sides"
        >

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextBlack.Normal"
            android:layout_weight="1"
            android:text="H264" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_choose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/selector_choose3" />
    </LinearLayout>

    <include layout="@layout/include_line_2" />

</LinearLayout>