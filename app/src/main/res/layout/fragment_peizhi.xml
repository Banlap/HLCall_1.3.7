            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="录音记录" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>

        <include layout="@layout/include_line_2" />

        <LinearLayout
            android:id="@+id/ll_missedCallWarn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="未接来电提醒" />

            <TextView
                android:id="@+id/tv_isWarn"
                style="@style/TextGray.Normal"
                android:layout_marginRight="5dp"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_transfer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="来电转接" />

            <TextView
                style="@style/TextGray.Normal"
                android:layout_marginRight="5dp"
                android:text="" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_recording"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="录音记录" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_blacklist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
