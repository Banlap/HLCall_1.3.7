            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_feature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:layout_marginTop="10dp"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="铃声设置" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:layout_marginTop="10dp"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="悬浮"/>

            <ImageView
                android:id="@+id/iv_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>

        <!--<include layout="@layout/include_line_2" />-->

        <LinearLayout
            android:id="@+id/ll_autoAnswerCall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="自动接听" />

            <ImageView
                android:id="@+id/iv_AutoAnswerCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>

        <!--<include layout="@layout/include_line_2" />-->

        <LinearLayout
            android:id="@+id/ll_autoAnswerCall_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="自动视频接听" />

            <ImageView
                android:id="@+id/iv_AutoAnswerCall_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>

        <!--<include layout="@layout/include_line_2" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="自动录音" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="锁屏" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="开机自启动" />

            <ImageView
                android:id="@+id/iv_autoStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>

        <!--<include layout="@layout/include_line_2" />-->

        <LinearLayout
            android:id="@+id/ll_bohao_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="常规呼叫前确认" />

            <ImageView
                android:id="@+id/iv_bohao_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/selector_peizhi_on_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_backfeed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:layout_marginTop="10dp"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="意见反馈" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_about_me"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="visible">

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="关于我们" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>


        <include layout="@layout/include_line_2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_row"
            android:background="@color/white_module"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone">

