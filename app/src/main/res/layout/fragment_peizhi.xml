            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/icon_fanhx" />
        </LinearLayout>

        <!--<include layout="@layout/include_line_2" />-->
        <LinearLayout
