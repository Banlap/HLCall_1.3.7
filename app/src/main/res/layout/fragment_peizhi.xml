            android:paddingLeft="@dimen/space_sides"
            android:paddingRight="@dimen/space_sides"
            android:visibility="gone"
            >

            <TextView
                style="@style/TextBlack.Normal"
                android:layout_weight="1"
                android:text="工作台" />

            <ImageView
                android:layout_width="wrap_content"
