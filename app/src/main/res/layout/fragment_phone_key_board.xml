<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_keyboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_key_board"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black_title_font"
                android:textSize="24dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <include layout="@layout/include_line"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="1"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="oo"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="2"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="3"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEF"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="4"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHI"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="5"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JKL"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MNO"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="7"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQRS"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="8"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUV"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="9"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WXYZ"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_star"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="*"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(P)"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="0"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_jing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextBlack.Small"
                        android:text="#"
                        android:textSize="@dimen/number"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(W)"
                        android:textColor="@color/black_title_font"
                        android:textSize="@dimen/number_2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >

            <LinearLayout
                android:id="@+id/ll_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                >

                <LinearLayout
                    android:id="@+id/ll_call_voice"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_bohao_button"
                    android:gravity="center">

                    <TextView
                        style="@style/TextWhite.Small"
                        android:drawableLeft="@drawable/icon_dianhua777"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:text="呼叫" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_call_more"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_bohao_button"
                    android:gravity="center">

                    <TextView
                        style="@style/TextWhite.Small"
                        android:drawablePadding="4dp"
                        android:text="更多" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_margin="20dp"
                android:scaleType="center"
                android:background="@drawable/icon_shanc"
                android:padding="5dp"
                app:layout_constraintDimensionRatio="2:1.4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_call"
                app:layout_constraintBottom_toBottomOf="@id/ll_call"
                app:layout_constraintLeft_toRightOf="@id/ll_call"
                />

            <LinearLayout
                android:id="@+id/ll_call_sos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ll_call"
                app:layout_constraintTop_toTopOf="@id/ll_call"
                app:layout_constraintBottom_toBottomOf="@id/ll_call"
                >

                <TextView
                    style="@style/TextWhite.Small"
                    android:drawablePadding="4dp"
                    android:text="SOS"
                    android:background="@drawable/shape_sos_button"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</FrameLayout>